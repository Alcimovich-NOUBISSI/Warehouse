@model Category

<h2>Create Category</h2>

<form method="post">
  <fieldset>
    <div class="form-group">
      <label asp-for="Name" class="form-label mt-4"></label>
      <input asp-for="Name" type="text" class="form-control" aria-describedby="emailHelp">
      <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-5">
      <label asp-for="DisplayOrder" class="form-label mt-4"></label>
      <input asp-for="DisplayOrder" type="text" class="form-control" aria-describedby="emailHelp">
      <span asp-validation-for="DisplayOrder" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-warning">Submit</button>
    <a asp-controller="Category" asp-action="Index" class="btn btn-primary">Back To List</a>
  </fieldset>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial.cshtml"/>
    }
}