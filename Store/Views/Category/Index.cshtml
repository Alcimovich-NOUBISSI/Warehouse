@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            Categories List
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-outline-primary"> <i class="bi bi-plus-circle"></i> New Category</a>
        </div>
    </div>
</div>
<table class="table table-primary table-bordered table-striped">
    <thead>
        <tr>
            <th>
                <span>
                    <a asp-controller="Category" asp-action="Index" asp-route-filter= "up"><i class="bi bi-caret-up-fill"></i></a> 
                    <a asp-controller="Category" asp-action="Index" asp-route-filter= "down"><i class="bi bi-caret-down-fill"></i></a>
                </span> Name
            </th>
            <th>Order</th>
            <th>Providers</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.DisplayOrder</td>
                <td>
                    @foreach (var provider in category.Provider_Category)
                    {
                        @provider.Provider.ProviderName
                    }
                </td>
                <td>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-outline-primary"> 
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-outline-primary"> 
                        <i class="bi bi-trash-fill"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>